<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Imper86\AllegroApiBundle\Factory\AllegroServiceFactory" public="false">
            <argument key="$config" />
            <argument key="$router" type="service" id="router" />
            <argument key="$logger" />
        </service>

        <service id="Imper86\AllegroRestApiSdk\AllegroAuthInterface" class="Imper86\AllegroRestApiSdk\AllegroAuth" autoconfigure="false">
            <factory service="Imper86\AllegroApiBundle\Factory\AllegroServiceFactory" method="createAuth" />
        </service>

        <service id="Imper86\AllegroRestApiSdk\AllegroClientInterface" class="Imper86\AllegroRestApiSdk\AllegroClient" autoconfigure="false">
            <factory service="Imper86\AllegroApiBundle\Factory\AllegroServiceFactory" method="createClient" />
        </service>

        <service id="Imper86\AllegroApiBundle\Controller\AllegroApiController" autoconfigure="true" autowire="true">
            <tag name="controller.service_arguments" />
        </service>

        <service id="Imper86\AllegroApiBundle\Repository\AllegroAccountRepository" autoconfigure="true" autowire="true" />
        <service id="Imper86\AllegroApiBundle\EventSubscriber\AuthCodeHandleSubscriber" autoconfigure="true" autowire="true" />
        <service id="Imper86\AllegroApiBundle\Service\TokenBundleService" autoconfigure="true" autowire="true" />
        <service id="Imper86\AllegroApiBundle\Factory\AllegroSimpleClientFactory" autoconfigure="true" autowire="true" />
        <service id="Imper86\AllegroApiBundle\Factory\ClientCredentialsAccountFactory" autoconfigure="true" autowire="true" />
    </services>
</container>
